.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  position: relative;
  overflow: hidden;
  background: linear-gradient(red, yellow);
}

.svg-background-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.svg-background-wrapper svg {
  display: block;
  width: 100%;
  height: 100%;
}

.breath-indicator {
  width: 320rpx;
  height: 320rpx;
  margin-bottom: 40px;
  position: relative;
  z-index: 1;
}

.countdown {
  font-size: 40px;
  font-weight: bold;
  margin-bottom: 40px;
  color: #E0E0E0;
  z-index: 1;
}

.mood-row {
  display: flex;
  flex-direction: row;
  gap: 40px;
  z-index: 1;
}

.mood-btn {
  width: 80px;
  height: 80px;
  font-size: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40px;
  background: #f5f5f5;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  cursor: pointer;
  transition: background 0.2s;
  z-index: 1;
}

.mood-btn:active {
  background: #e0e0e0;
}

.progress-canvas {
  position: absolute;
  left: 0;
  top: 0;
  width: 320rpx;
  height: 320rpx;
  pointer-events: none;
  z-index: 2;
}

/* Duration Selector Styles */
.duration-controls {
  margin-bottom: 30rpx; /* Add some space below the picker */
  padding: 10rpx 20rpx;
  border: 1rpx solid #E0E0E0; /* Light border, similar to countdown text color */
  border-radius: 8rpx;
  background-color: rgba(255, 255, 255, 0.1); /* Subtle background to lift it from main bg */
  width: 60%;
  max-width: 300rpx;
  text-align: center;
}

.picker-style {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #F5F5F5; /* Light text color for dark/gradient background */
}

.selected-duration-text {
  font-weight: bold;
  margin: 0 10rpx;
}

.picker-arrow {
  font-size: 20rpx;
}

.current-duration-display {
  font-size: 28rpx;
  color: #E0E0E0;
  margin-bottom: 30rpx;
  text-align: center;
  padding: 10rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 8rpx;
  width: 60%;
  max-width: 300rpx;
} 